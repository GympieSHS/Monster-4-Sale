<script>
const cartTableBody = document.querySelector("#cart-table tbody");

// Add to cart function
function addToCart(productName) {
  const userName = prompt("Please enter your name:");
  if (!userName) return;

  const quantity = prompt(`How many of "${productName}" would you like, ${userName}?`);
  if (!quantity || isNaN(quantity) || quantity <= 0) return;

  let pricePerItem;
  if (productName.toLowerCase().includes("monster")) pricePerItem = 4;
  else if (productName.toLowerCase() === "original red bull") pricePerItem = 3;
  else pricePerItem = 3.5;

  const totalPrice = pricePerItem * quantity;

  const row = document.createElement("tr");
  row.innerHTML = `
    <td>${userName}</td>
    <td>${productName}</td>
    <td>${quantity}</td>
    <td>$${totalPrice.toFixed(2)}</td>
  `;
  cartTableBody.appendChild(row);
  alert(`Added ${quantity} x ${productName} to ${userName}'s cart. Total: $${totalPrice.toFixed(2)}`);
}

// Attach Buy Now listeners
document.querySelectorAll(".buy-btn").forEach(btn => {
  btn.addEventListener("click", () => {
    const productName = btn.closest(".product").getAttribute("data-name");
    addToCart(productName);
  });
});

// Checkout: download CSV
document.getElementById("checkout-btn").addEventListener("click", () => {
  const rows = document.querySelectorAll("#cart-table tbody tr");
  if (rows.length === 0) {
    alert("Your cart is empty!");
    return;
  }

  let csv = "Name,Product,Quantity,Price\n";
  rows.forEach(row => {
    const cells = row.querySelectorAll("td");
    csv += `${cells[0].textContent},${cells[1].textContent},${cells[2].textContent},${cells[3].textContent}\n`;
  });

  const blob = new Blob([csv], { type: "text/csv" });
  const link = document.createElement("a");
  link.href = URL.createObjectURL(blob);
  link.download = "monster_order.csv";
  link.click();

  alert("Your order has been downloaded as CSV!");
  cartTableBody.innerHTML = "";
});
</script>

